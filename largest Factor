public class LargeFactor {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.println(largestFactor(168));
		System.out.println(largestFactor(121));
		System.out.println(largestFactor(7));
		System.out.println(largestFactor(1));
		System.out.println(largestFactor(0));
		System.out.println(largestFactor(-147));
		System.out.println(largestFactor(11));
		System.out.println(largestFactor(12));
		System.out.println(largestFactor(19));
	}
    static int largestFactor(int num) {
    	
    	if(num<=0) return 0;
    	else if(num==1) return 1;
    	for(int i=2; i<=num; i++) {
    		if (num % i==0) return num/i;
    		
    	}
    	return 0;
    
    	
    }

}
